package com.wushengde.jsp;

import java.io.IOException;
import java.util.Date;

import javax.servlet.ServletException;
import javax.servlet.http.Cookie;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class CookieDemo extends HttpServlet {

	public void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		Cookie[] cs = request.getCookies();
		Cookie findC = null;
		for(Cookie c:cs){
			if("lastTime".equals(c.getName())){
				findC = c;
			}
		}
		if(findC==null){
			response.getWriter().write("您是第一次访问该网站");
		}
		else{
			Long lastTime = Long.parseLong(findC.getValue());
			response.getWriter().write("您上次访问本网站的时间是："+new Date(lastTime).toLocaleString());
		}
		Date date = new Date();
		Cookie c = new Cookie("lastTime",date.getTime()+" ");
		response.addCookie(c);
	}

	public void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {

	}

}
